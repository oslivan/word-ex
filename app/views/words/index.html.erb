<p id="notice"><%= notice %></p>

<h1>Words</h1>

<table>
  <thead>
    <tr>
	<th><%= I18n.t('activerecord.attributes.word.name') %></th>
	<th><%= I18n.t('activerecord.attributes.word.translation') %></th>
	<th><%= I18n.t('activerecord.attributes.word.phonetic') %></th>
	<th><%= I18n.t('activerecord.attributes.word.sentence') %></th>
	<th><%= I18n.t('activerecord.attributes.word.error_count') %></th>
	<th><%= I18n.t('activerecord.attributes.word.try_count') %></th>
	<th><%= I18n.t('activerecord.attributes.word.difficult_coefficient') %></th>
	<th><%= I18n.t('activerecord.attributes.word.word_src') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @words.each do |word| %>
      <tr>
        <td><%= word.name %></td>
        <td><%= word.translation %></td>
        <td><%= word.phonetic %></td>
        <td><%= word.sentence %></td>
        <td><%= word.error_count %></td>
        <td><%= word.try_count %></td>
        <td><%= word.difficult_coefficient %></td>
        <td><%= word.word_src %></td>
        <td><%= link_to I18n.t("operate.show"), word %></td>
        <td><%= link_to I18n.t("operate.edit"), edit_word_path(word) %></td>
				<td><%= link_to I18n.t("operate.destroy"), word, method: :delete, data: { confirm: "#{I18n.t('operate.are_you_sure')}" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Word', new_word_path %>
