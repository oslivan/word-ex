<p id="notice"><%= notice %></p>

<h1>Word Srcs</h1>

<table>
  <thead>
    <tr>
	<th><%= I18n.t('activerecord.attributes.word_src.name') %></th>
	<th><%= I18n.t('activerecord.attributes.word_src.create_person') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @word_srcs.each do |word_src| %>
      <tr>
        <td><%= word_src.name %></td>
        <td><%= word_src.create_person %></td>
        <td><%= link_to I18n.t("operate.show"), word_src %></td>
        <td><%= link_to I18n.t("operate.edit"), edit_word_src_path(word_src) %></td>
				<td><%= link_to I18n.t("operate.destroy"), word_src, method: :delete, data: { confirm: "#{I18n.t('operate.are_you_sure')}" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Word Src', new_word_src_path %>
